<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Budget Summary -->
        <TextView
            android:id="@+id/tvTotalBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Budget: $0.0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Rollover Amount -->
        <TextView
            android:id="@+id/tvRolloverAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rollover Amount: $0.0"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Categories Label -->
        <TextView
            android:id="@+id/labelCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textStyle="bold"
            android:textSize="16sp"
            android:labelFor="@id/rvCategories"
            android:paddingBottom="8dp" />

        <!-- Categories RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="List of budget categories"
            android:minHeight="100dp"
            android:layout_marginBottom="16dp" />

        <!-- Event Budgets Label -->
        <TextView
            android:id="@+id/labelEventBudgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Budgets"
            android:textStyle="bold"
            android:textSize="16sp"
            android:labelFor="@id/rvEventBudgets"
            android:paddingBottom="8dp" />

        <!-- Event Budgets RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEventBudgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="List of special event budgets"
            android:minHeight="100dp"
            android:layout_marginBottom="24dp" />

        <!-- Add Category Button -->
        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Category"
            android:onClick="onAddCategoryClicked"
            android:layout_marginBottom="12dp" />

        <!-- Adjust Budget Button -->
        <Button
            android:id="@+id/btnAdjustBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjust Budget"
            android:onClick="onAdjustBudgetClicked" />
    </LinearLayout>
</ScrollView>
