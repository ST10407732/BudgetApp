<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etFullName"
            android:hint="Full Name"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etAchievementLevel"
            android:hint="Achievement Level"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etMembershipDetails"
            android:hint="Membership Details"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etTotalBalance"
            android:hint="Total Balance"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etTotalDebt"
            android:hint="Total Debt"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etMonthlyIncome"
            android:hint="Monthly Income"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etMonthlyExpenses"
            android:hint="Monthly Expenses"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etNetWorth"
            android:hint="Net Worth"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:text="Save Profile"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
